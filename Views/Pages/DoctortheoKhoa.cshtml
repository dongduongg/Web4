@{
    ViewData["Title"] = "DoctortheoKhoa";
    Layout = "~/Views/Shared/LayoutDoctor.cshtml";
}
@model List<Doctor>
<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <div class="team-item position-relative rounded overflow-hidden">
                <div class="overflow-hidden">
                    <img class="img-fluid" src="@item.ImagePath"  
                         alt="@item.DoctorName">
                </div>
                <div class="team-text bg-light text-center p-4">
                    <h5><a asp-controller="Pages" asp-action="DoctorDetail" asp-route-maDoctor="@item.DoctorId">@item.DoctorDegree - @item.DoctorName</a></h5>
                    @*<p class="text-primary">@item.FacultyId</p>*@
                    <div class="team-social text-center">
                        <a class="btn btn-square" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-square" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-square" href=""><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>






